{
	"workbench.iconTheme": "material-icon-theme",
	"workbench.tree.indent": 16,
	"editor.tabSize": 2,
	"editor.bracketPairColorization.enabled": true,
	// "editor.smoothScrolling": true,
	"vim.easymotion": true,
	"vim.surround": true,
	"vim.hlsearch": true,
	"vim.leader": " ",
	"vim.easymotionDimBackground": false,

	"explorer.incrementalNaming": "smart",
	// "editor.codeActionsOnSave": {},
	"[vue]": {
		"editor.defaultFormatter": "octref.vetur"
	},
	// "prettier.enable": true,
	// "prettier.endOfLine": "lf",
	// "prettier.singleQuote": true,
	// "prettier.semi": false,
	// "prettier.useTabs": true,
	// "prettier.tabWidth": 2,
	// "prettier.trailingComma": "all",
	// "prettier.arrowParens": "always",
	"[typescript]": {
		"editor.defaultFormatter": "vscode.typescript-language-features"
		// "editor.defaultFormatter": "vscode.typescript-language-features"
		// "editor.formatOnSave": true,
		// "editor.defaultFormatter": "esbenp.prettier-vscode",
	},
	// "prettier.configPath": "/home/raul/.prettierrc",
	"vetur.format.defaultFormatter.html": "js-beautify-html",
	"vetur.format.defaultFormatter.js": "none",
	"vetur.format.options.useTabs": true,
	"eslint.packageManager": "npm",
	"editor.renderWhitespace": "all",
	"[html]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"files.exclude": {
		// "build": true,
		// "dist": true
	},
	"[javascript]": {
		"editor.defaultFormatter": "vscode.typescript-language-features"
		// "editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[json]": {
		"editor.defaultFormatter": "vscode.json-language-features"
	},
	"[dart]": {
		"editor.formatOnSave": true,
	},
	// "javascript.validate.enable": false,
	"javascript.updateImportsOnFileMove.enabled": "always",
	"typescript.updateImportsOnFileMove.enabled": "always",
	"workbench.colorTheme": "One Dark Pro",
	"[jsonc]": {
		"editor.defaultFormatter": "vscode.json-language-features"
	},
	"redhat.telemetry.enabled": false,
	"vim.vimrc.enable": true,

	// <=> Purescript
	"[purescript]": {
		"editor.formatOnSave": true,
	},
	"purescript.addNpmPath": true,
	"purescript.formatter": "purs-tidy",

	"purescript.addSpagoSources": true,
	"purescript.buildCommand": "spago build -u --json-errors -u \"-g sourcemaps\"",
	"purescript.codegenTargets": ["js", "sourcemaps"],
	// "purescript.autoStartPscIde": false,

  // "purescript.buildCommand": "pulp build -- --json-errors",
}
